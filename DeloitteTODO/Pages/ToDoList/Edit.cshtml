@page
@model DeloitteTODO.Pages.ToDoList.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ToDoItemDTO.Id" />
            <input type="hidden" asp-for="ToDoItemDTO.UserId" />
            <div class="form-group">
                <label asp-for="ToDoItemDTO.Describtion" class="control-label"></label>
                <input asp-for="ToDoItemDTO.Describtion" class="form-control" required />
                <span asp-validation-for="ToDoItemDTO.Describtion" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ToDoItemDTO.IsChecked" /> @Html.DisplayNameFor(model => model.ToDoItemDTO.IsChecked)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
